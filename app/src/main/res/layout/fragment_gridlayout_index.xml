<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="5">


        <TextView
            app:layout_row="0"
            app:layout_column="0"
            android:layout_height="65dp"
            android:background="@drawable/bg_index"
            android:clickable="true"
            android:gravity="center"
            android:text="News"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            app:layout_row="0"
            app:layout_column="1"
            android:background="@android:color/darker_gray"
            android:layout_width="1px"
            app:layout_gravity="fill"
            app:layout_rowSpan="5" />

        <TextView
            app:layout_row="0"
            app:layout_column="2"
            android:layout_height="65dp"
            android:background="@drawable/bg_index"
            android:clickable="true"
            android:gravity="center"
            android:text="TV"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            app:layout_row="0"
            app:layout_column="3"
            android:background="@android:color/darker_gray"
            android:layout_width="1px"
            app:layout_gravity="fill"
            app:layout_rowSpan="5" />

        <TextView
            app:layout_row="0"
            app:layout_column="4"
            android:layout_height="65dp"
            android:background="@drawable/bg_index"
            android:clickable="true"
            android:gravity="center"
            android:text="Sport"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            app:layout_row="1"
            app:layout_column="0"
            android:background="@android:color/darker_gray"
            android:layout_height="1px"
            app:layout_gravity="fill"
            app:layout_columnSpan="5"/>

        <TextView
            app:layout_row="2"
            app:layout_column="0"
            android:layout_height="65dp"
            android:background="@drawable/bg_index"
            android:clickable="true"
            android:gravity="center"
            android:text="Shop"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/tv_eng"
            app:layout_row="2"
            app:layout_column="2"
            android:layout_height="65dp"
            android:background="@drawable/bg_index"
            android:clickable="true"
            android:gravity="center"
            android:text="English"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            app:layout_row="2"
            app:layout_column="4"
            android:layout_height="65dp"
            android:background="@drawable/bg_index"
            android:clickable="true"
            android:gravity="center"
            android:text="Music"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            app:layout_gravity="fill"
            android:background="@android:color/darker_gray"
            android:layout_height="1px"
            app:layout_columnSpan="5"/>

        <TextView
            app:layout_row="4"
            app:layout_column="0"
            android:layout_height="65dp"
            android:background="@drawable/bg_index"
            android:clickable="true"
            android:gravity="center"
            android:text="Film"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            app:layout_row="4"
            app:layout_column="2"
            android:layout_height="65dp"
            android:background="@drawable/bg_index"
            android:clickable="true"
            android:gravity="center"
            android:text="About"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            app:layout_row="4"
            app:layout_column="4"
            android:layout_height="65dp"
            android:background="@drawable/bg_index"
            android:gravity="center"
            android:text=""
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

    </android.support.v7.widget.GridLayout>


</ScrollView>